layout {
    default_tab_template {
		children
		pane {
			size 1
			borderless true
			plugin location="zellij:compact-bar";
		}
	}
    tab name="git" {
        pane {
            command "lazygit"
        }
    }
    tab name="working dir" focus=true {
        pane {
            command "fastfetch"
            focus true
        }
    }
}
